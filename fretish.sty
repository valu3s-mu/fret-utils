% To make the starred version work
\usepackage{suffix}


% Acronym for FRET
\RequirePackage{glossaries}
\newacronym{fret}{FRET}{Formal Requirements Elicitation Tool} 

% Command for typsetting FRETISH
\newcommand{\fretish}{\textsc{fretish}}

% Colours for FRETISH sentences
\RequirePackage{xcolor}
\definecolor{ForestGreen}{rgb}{0.0,0.4,0.0}
\definecolor{Mahogany}{rgb}{0.75, 0.25, 0.0}

\newcommand{\Condition}{{\small\texttt{\textcolor{orange}{condition}}}}
\newcommand{\Component}{{\small\texttt{\textcolor{ForestGreen}{component}}}}
\newcommand{\Response}{{\small\texttt{\textcolor{violet}{response}}}}
\newcommand{\Timing}{{\small\texttt{\textcolor{cyan}{timing}}}}
\newcommand{\Scope}{{\small\texttt{\textcolor{Mahogany}{scope}}}}

\newcommand{\fretishComponents}{\Scope{} \ \Condition{} \ \Component{}\ \allowbreak \texttt{shall}  \ \Timing{}\  \Response{}}
\newcommand{\fretishComponentsSmall}{{\small\Scope{} \ \Condition{} \ \Component{}\ \allowbreak \texttt{shall}  \ \Timing{}\  \Response{}}}
\newcommand{\condition}[1]{{\small\textcolor{orange}{\texttt{#1}}}}
\newcommand{\component}[1]{{\small\textcolor{ForestGreen}{\texttt{#1}}}}
\newcommand{\response}[1]{{\small\textcolor{violet}{\texttt{satisfy} \texttt{#1}}}}
\WithSuffix\newcommand\response*[1]{{\small\textcolor{violet}{\texttt{#1}}}}
\newcommand{\timing}[1]{{\small\textcolor{cyan}{\texttt{#1}}}}
\newcommand{\scope}[1]{{\small\textcolor{Mahogany}{in \texttt{#1} mode}}}



