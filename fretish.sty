% Acronym for FRET
\RequirePackage{glossaries}
\newacronym{fret}{FRET}{Formal Requirements Elicitation Tool} 

% Command for typsetting FRETISH
\newcommand{\fretish}{\textsc{fretish}}

% Colours for FRETISH sentences
\RequirePackage{xcolor}
\definecolor{ForestGreen}{rgb}{0.0,0.4,0.0}
\definecolor{Mahogany}{rgb}{0.75, 0.25, 0.0}

\newcommand{\Condition}{\texttt{\textcolor{orange}{condition}}}
\newcommand{\Component}{\texttt{\textcolor{ForestGreen}{component}}}
\newcommand{\Response}{\texttt{\textcolor{violet}{response}}}
\newcommand{\Timing}{\textcolor{cyan}{timing}}
\newcommand{\Scope}{\textcolor{Mahogany}{scope}}


\newcommand{\fretishComponents}{\Scope{}, \Condition{}, \Component{}, shall, \Timing{}, \Response{}}


\newcommand{\condition}[1]{\textcolor{orange}{if #1}}
\newcommand{\component}[1]{\textcolor{ForestGreen}{#1}}
\newcommand{\response}[1]{\textcolor{violet}{satisfy #1}}
\newcommand{\timing}[1]{\textcolor{cyan}{#1}}
\newcommand{\scope}[1]{\textcolor{Mahogany}{in #1 mode}}



